@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "MasterPage.cshtml";
}

@Model.Value("cliniciansandCommitteeSignUp")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Heart Failure Information Portal</title>
    
    <link href="/css/MasterPage.css" rel="stylesheet" />
    <link href="/css/ClinicianCommitteeRegister.css" rel="stylesheet" />
    
    <!--Script--> 
    <script src="./Scripts/ClinicianCommitteeRegister.js"></script>
    
    
 </head>
 <body>
    
    <div class = "main-reg-body"> 
        <form class = "reg-body"> 
            <h1 class = "main-title"> Clinician & Committee Registration</h1>
            
            <!--Detail input for the user--> 
            <div class = "input-input-group">
                <label>Prefix</label><br> 
                <input type = "text" class = "prefix-input-form" id="prefix" placeholder = "Dr."><br>
                <label>Full Name</label><br> 
                <input type = "text" class = "fullname-input-form" id="name" placeholder = "Steve Smith"><br>
                <label>Professional Qualification</label><br> 
                <input type = "text" class = "qualification-input-form" id="qualification" placeholder = "Professional Qualification"><br> 
                <label>Professional Work Address</label><br>
                <input type = "text" class = "address-input-form" id="address" placeholder = "Professional Address"><br>
                <label>Number</label><br> 
                <input type = "text" class = "phone-input-form" id="phone" placeholder = "0411 111 111"><br>
                <label>Email Address</label><br> 
                <input type = "email" class = "email-input-form" id="email" placeholder = "abc@email.com"><br>
                
                <!--Password Validation--> 
                <label>Enter Your Password</label><br> 
                <input type = "password" class = "password-input-form" id="password" placeholder = "Password"> <br>  
                <label>Re-Enter Your Password</label><br> 
                <input type = "password" class = "repassword-input-form" id="repassword" placeholder = "Re-Enter Password"> <br><br>
                
                <!--Security Question--> 
                <select class = "securityOption">
                    <option value="Op1">What was the name of your first pet?</option>
                    <option value="Op2">What is your mother's maiden name?</option>
                    <option value="Op3">In what city were you born?</option>
                </select> <br>
                
                <label>Enter Your Security Question Answer</label><br> 
                <input type = "text" class = "security-input-form" id="security" placeholder = "Security Question"> <br>
                <label>Re-Enter Your Security Question Answer</label><br>
                <input type = "text" class = "resecurity-input-form" id="resecurity" placeholder = "Re-Enter Security Question"> <br><br>
                
                <!--Button--> 
                <button class="RegButton" type="submit" id="RegButton">Register</button>
                
                <!--Back to login--> 
                <p class="login">
                    <a class="login" href="/log-in/" id="login">Already have an account? Log-in here</a>
                </p>
                
            </div>
        </form>
    </div>
    
    
    
    
</body>
</html>
    