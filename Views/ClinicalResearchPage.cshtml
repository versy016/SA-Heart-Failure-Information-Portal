@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "MasterPage.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Heart Failure Information Portal</title>
    
    <!--CSS-->
    <link href="/css/MasterPage.css" rel="stylesheet" />
    <link href="/css/ClinicalResearchPage.css" rel="stylesheet" />
    
    <!--Javascript--> 
    <script type = "text/javascript">
    
        //removes sign in button
        window.addEventListener('load', function () {
            const element = document.getElementById("myBtn");
            element.remove();
        })
            
        var realFileBtn = document.getElementById("real-file");
        var table = document.getElementById("myTable")[0];
        var uploadBtn = document.getElementById("uploadBtn");
              
        //opens file selector window  
        realFileBtn.addEventListener("click", function() {
            realFileBtn.click();
        });
        
        
        //Selects the file        
        realFileBtn.addEventListener("change", function() {
            if (realFileBtn.value) {
                customTxt.innerHTML = realFileBtn.value.match(/[\/\\]([\w\d\s\.\-\(\)]+)$/)[1];
            } else {
                customTxt.innerHTML = "Select a File";
            }
        });
        
        //Adds PDF to the table 
        function appendFunction(){
            
            var newRow = table.insertRow(0);
            var cell1 = newRow.insertCell(0); 
            cell1.innerHTML = realFileBtn; 
            document.getElementById("file-name").value = '';
            
        } 
        
        //Upload Button
        uploadBtn.addEventListener("submit", appendFunction);
    
    </script>
    
</head> 
<body> 
    
    <!--Main Body--> 
    <div class = "main-body"> 
        <!--PDF Container--> 
        <div class = "pdf-file-uploader"> 
             <!-- Table Body--> 
             <table class = "forum-header" id="myTable"> 
                <thead>
                    <tr>
                        <th>Research Upload</th>
                    </tr>
                </thead>
                <tbody class="forum-table">
                    <tr>
                        <th>Upload Your PDF File</th>
                    </tr>
                </tbody>
            </table>
            
            <!--Upload File Button --> 
            <form>
                <input type="file" id="real-file"  multiple class ="custom-button"/>
                <input type="submit" id="uploadBtn" class = "upload-button" value="Submit">  
            </form>
            
        
        </div>
    </div>

</body> 
</html>