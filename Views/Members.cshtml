          <!--Input Field-->
          <form action="">
                <div class = "input-row"> 
                    <div class = "input-group"> 
                        <label>Prefix</label>
                        <input type = "text" placeholder = "Dr." id="prefix">
                    </div>
                    <div class = "input-group"> 
                        <label>Name</label>
                        <input type = "text" placeholder = "Steve Smith">
                    </div>
                    <div class = "input-group"> 
                        <label>Title</label>
                        <input type = "text" placeholder = "Heart Failure Specalist">
                    </div>
                    </div>
                    
                    <label>Message</label><br>
                    <textarea cols = "15" placeholder = "Description" class ="description"></textarea><br><br> 
                    
                    <!--Upload an image--> 
                    <input type="file" id="fileInput" accept="image/*" onchange="uploadImage()"><br> 
                    
